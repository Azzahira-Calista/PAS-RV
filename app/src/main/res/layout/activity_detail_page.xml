<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailPage"
    android:orientation="vertical"
    android:background="@color/myDarkGray">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="19dp"
            android:textAlignment="center"
            android:textSize="27sp"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/imageDetail"
            android:layout_width="200dp"
            android:layout_height="230dp"
            android:layout_below="@+id/tvTitle"
            android:layout_centerHorizontal="true"
            android:layout_margin="21dp"/>

        <TextView
            android:id="@+id/tvSinopsis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageDetail"
            android:layout_marginBottom="11dp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:textSize="19sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tvDateRelease"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSinopsis"
            android:layout_marginBottom="11dp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:textSize="19sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tvPopularity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDateRelease"
            android:layout_marginBottom="11dp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:textSize="19sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tvVoteAverage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPopularity"
            android:layout_marginBottom="13dp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:textSize="19sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tvVote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvVoteAverage"
            android:text="Description"
            android:layout_marginStart="17dp"
            android:layout_marginBottom="11dp"
            android:textSize="19sp"
            android:textColor="@color/white"/>


    </RelativeLayout>

</ScrollView>